// TC1 - Nuevos Tipos Primitivos y Operaciones
// Prueba de funciones recursivas, booleanos, float, int, string

fun repeat(n:int, s:string):string =
    n == 0 ? "" : s + repeat(n - 1, s)

print("=== TC1: Repeat Function ===")
print(repeat(5, "*"))

let sumFloat = (a:float, b:float) -> a + b * 1.5
print("SumFloat(2.0, 4.0) = " + sumFloat(2.0, 4.0))

let boolTest = (x:int) -> (x % 2 == 0 ? "even" : "odd")
print("Check 7: " + boolTest(7))
print("Check 12: " + boolTest(12))

// Recursividad con tipo expl√≠cito
fun factorial(n:int):int = n == 0 ? 1 : n * factorial(n - 1)
print("factorial(5) = " + factorial(5))